<div class="logs">
    <form action="/ship?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit your ship</legend>
            <div class="ship-data">
                <div class="title">
                    <p>Set ship attributes: (hull strength and firepower must add up to 10)</p>
                </div>
                <div class="field">
                    <label for="ship-hull">Ship Hull Strength (1-9):</label>
                    <input type="text" name="ship-hull" id="ship-hull" value="<%= ship.hp %>"/>
                </div>
                <div class="field">
                    <label for="ship-firepower">Ship Firepower (1-9):</label>
                    <input type="text" name="ship-firepower" value="<%= ship.damage %>"/>
                </div>
            </div>
            <div class="field">
                <button type="submit">Submit</button>
            </div>
            <div class="delete">
                <a class="button" href="/users/delete">Delete User</a>
            </div>
        </fieldset>
    </form>
</div>