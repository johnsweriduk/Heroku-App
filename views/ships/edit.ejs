<div class="logs">
    <form id="edit-form" action="/ship" method="POST">
        <input type="hidden" name="name" value="<%= ship.name %>"
        <fieldset>
            <legend>Edit your ship</legend>
            <div class="ship-data">
                <div class="title">
                    <p style="margin-bottom: 0px; margin-top: 25px;">Ship level: <%= ship.level %></p>
                    <p style="margin-bottom: 15px; font-weight: bold;">Set ship attributes: (hull strength and firepower must add up to 10)</p>
                </div>
                <div class="field">
                    <label for="ship-hull">Ship Hull Strength (1-9):</label>
                    <input type="text" name="shiphull" id="ship-hull" value="<%= ship.hp %>"/>
                </div>
                <div class="field">
                    <label for="ship-firepower">Ship Firepower (1-9):</label>
                    <input type="text" name="shipfirepower" value="<%= ship.damage %>"/>
                </div>
            </div>
            <div class="field">
                <button id="edit-submit" type="submit">Submit</button>
            </div>
            <div class="delete">
                <a id="delete-user" class="button" href="/users/delete">Delete User</a>
                <a class="button" href="/" id="back">Back</a>
            </div>
        </fieldset>
    </form>
</div>