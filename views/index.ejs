<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Space Battle!</title>
    <%- include('partials/head.ejs') %>
</head>
<body>

<% if(currentUser) { %>
    <div class="modal">
        <div class="title">
            <p>Welcome, <% currentUser.username %></p>
        </div>
        <div class="buttons">
            <a id="play" class="button" href="/play/1">Play</a>
        </div>
    </div>
<% } else { %>
    <div class="modal">
        <div class="title">
            <p>Login/Signup</p>
        </div>
        <div class="buttons">
            <a id="new-account" class="button" href="/users/new">New Account</a>
            <a id="login" class="button" href="/sessions/new">Login</a>
        </div>
    </div>
<% } %>
<div id="space"></div>
<%- include ('partials/scripts.ejs') %>
</body>
</html>